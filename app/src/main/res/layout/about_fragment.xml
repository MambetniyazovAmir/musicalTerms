<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_standard"
        android:layout_marginTop="16dp"
        android:text="@string/about_app"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/texno_Pos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_standard"
        android:gravity="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dso_logo"
        android:layout_width="@dimen/logo_margin"
        android:layout_height="@dimen/logo_margin"
        android:layout_marginEnd="@dimen/margin_standard"
        android:src="@drawable/dso_logo"
        app:layout_constraintTop_toTopOf="@id/texno_Pos"
        app:layout_constraintEnd_toStartOf="@id/texno_Pos"
        app:layout_constraintBottom_toBottomOf="@id/texno_Pos"
        android:background="@drawable/circle"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/texno_Pos"
        android:layout_width="@dimen/logo_margin"
        android:layout_height="@dimen/logo_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/texnopos_logo"/>

    <ImageView
        android:layout_width="@dimen/logo_margin"
        android:layout_height="@dimen/logo_margin"
        app:layout_constraintStart_toEndOf="@id/texno_Pos"
        app:layout_constraintTop_toTopOf="@id/dso_logo"
        android:src="@drawable/logo_1"
        android:layout_marginStart="@dimen/margin_standard"/>


</androidx.constraintlayout.widget.ConstraintLayout>